@page "/"
@using PathStructureServer
@model PathStructureServer.Pages._HostModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PathStructure Enterprise Admin</title>
    <style>
      body {
        font-family: "Segoe UI", Arial, sans-serif;
        margin: 2rem;
        color: #1b1b1b;
      }
      header {
        margin-bottom: 2rem;
      }
      h1 {
        margin: 0 0 0.5rem 0;
      }
      .section {
        border: 1px solid #d9d9d9;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        background: #fafafa;
      }
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
      }
      .form-field {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
        margin-bottom: 0.75rem;
      }
      input, textarea, select {
        border-radius: 6px;
        border: 1px solid #c7c7c7;
        padding: 0.5rem 0.65rem;
        font-size: 0.95rem;
        font-family: "Segoe UI", Arial, sans-serif;
      }
      textarea.monospace {
        font-family: "Cascadia Mono", "Consolas", monospace;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 0.75rem;
      }
      th, td {
        border-bottom: 1px solid #ddd;
        padding: 0.5rem;
        text-align: left;
      }
      code {
        background: #f0f0f0;
        padding: 0.1rem 0.3rem;
        border-radius: 4px;
      }
      .muted {
        color: #666;
        font-size: 0.95rem;
      }
      .actions {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
      }
      button {
        border: 1px solid transparent;
        border-radius: 6px;
        padding: 0.4rem 0.75rem;
        cursor: pointer;
        font-size: 0.9rem;
      }
      button.primary {
        background: #005fb8;
        color: #fff;
      }
      button.secondary {
        background: #f2f4f7;
        border-color: #d0d5dd;
        color: #1f2937;
      }
      button.danger {
        background: #fef2f2;
        border-color: #fecaca;
        color: #b42318;
      }
      button:disabled {
        background: #d4d4d4;
        color: #666;
        cursor: not-allowed;
      }
      .alert {
        padding: 0.75rem;
        border-radius: 8px;
        margin-bottom: 1rem;
      }
      .alert-success {
        background: #ecfdf3;
        border: 1px solid #abefc6;
        color: #027a48;
      }
      .alert-error {
        background: #fef3f2;
        border: 1px solid #fecdca;
        color: #b42318;
      }
      tr.highlight {
        background: #eef4ff;
      }
    </style>

    <component type="typeof(Microsoft.AspNetCore.Components.Web.HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />
    
  </body>
</html>
