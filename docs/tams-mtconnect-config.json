{
  "paths": [
    {
			"name": "TAMS integration folder",
      "regex": "^C:\\\\TAMS?$",
      "isRequired": true,
      "flavorTextTemplate": "TAMS MTConnect integration folder.",
      "paths": [
        {
          "regex": "^C:\\\\TAMS\\\\mtconnect-manifest\\.json$",
          "isRequired": true,
          "flavorTextTemplate": "MTConnect manifest for the TAMS installation."
        },
        {
					"name": "Integration maintenance tools folder",
          "regex": "^Tools?$",
          "flavorTextTemplate": "Shared tooling for TAMS integrations."
        },
        {
					"name": "Adapters Folder",
          "regex": "^Adapter[s]?$",
          "isRequired": true,
          "flavorTextTemplate": "Organizer folder for adapter installations.",
          "paths": [
            {
							"name": "Adapter install folder",
              "regex": "^(?<AdapterName>[^\\\\]+)$",
              "flavorTextTemplate": "Adapter {{ AdapterName }} installation folder.",
              "paths": [
                {
                  "regex": "^appsettings\\.json$",
                  "isRequired": true,
                  "flavorTextTemplate": "Adapter {{ AdapterName }} configuration."
                },
                {
                  "regex": "^component-package-manifest\\.json$",
                  "isRequired": true,
                  "flavorTextTemplate": "Adapter {{ AdapterName }} component package manifest."
                },
                {
                  "regex": "^sdk-metadata\\.json$",
                  "isRequired": true,
                  "flavorTextTemplate": "Adapter {{ AdapterName }} SDK metadata."
                },
                {
									"name": "Adapter imports folder",
                  "regex": "^Imports?$",
                  "isRequired": true,
                  "flavorTextTemplate": "Adapter {{ AdapterName }} SDK imports folder.",
                  "paths": [
                    {
                      "regex": "^adapter?$",
                      "isRequired": true,
                      "flavorTextTemplate": "Adapter {{ AdapterName }} SHDR library import folder.",
                      "paths": [
                        {
                          "regex": "^component-package-manifest\\.json$",
                          "isRequired": true,
                          "flavorTextTemplate": "Adapter {{ AdapterName }} SHDR library import manifest."
                        },
                        {
                          "regex": "^sdk-metadata\\.json$",
                          "isRequired": true,
                          "flavorTextTemplate": "Adapter {{ AdapterName }} SHDR library import metadata."
                        }
                      ]
                    },
                    {
											"name": "Adapter Source library folder",
                      "regex": "^adapter-source?$",
                      "isRequired": true,
                      "flavorTextTemplate": "Adapter {{ AdapterName }} data source configuration folder.",
                      "paths": [
                        {
													"name": "Adapter config",
                          "regex": "^adapterconfig\\.json$",
                          "flavorTextTemplate": "Adapter {{ AdapterName }} data source configuration."
                        },
                        {
													"name": "Adapter config template",
                          "regex": "^adapterconfig\\.template\\.json$",
                          "flavorTextTemplate": "Adapter {{ AdapterName }} data configuration template."
                        },
                        {
                          "regex": "^component-package-manifest\\.json$",
                          "isRequired": true,
                          "flavorTextTemplate": "Adapter {{ AdapterName }} data source manifest."
                        },
                        {
                          "regex": "^sdk-metadata\\.json$",
                          "isRequired": true,
                          "flavorTextTemplate": "Adapter {{ AdapterName }} data source metadata."
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
					"name": "Agents folder",
          "regex": "^Agent[s]?$",
          "isRequired": true,
          "flavorTextTemplate": "Organizer for MTConnect agent installations.",
          "paths": [
            {
							"name": "Agent install folder",
              "regex": "^(?<AgentName>[^\\\\]+)?$",
              "flavorTextTemplate": "{{ AgentName }} MTConnect agent installation folder.",
              "paths": [
                {
                  "regex": "^[Bb]in?$",
                  "isRequired": true,
                  "flavorTextTemplate": "{{ AgentName }} MTConnect agent EXE folder.",
                  "paths": [
                    {
											"name": "Agent configuration",
                      "regex": "^agent\\.cfg$",
                      "isRequired": true,
                      "flavorTextTemplate": "{{ AgentName }} MTConnect agent configuration."
                    },
                    {
											"name": "Agent executable",
                      "regex": "^agent\\.exe$",
                      "isRequired": true,
                      "flavorTextTemplate": "{{ AgentName }} MTConnect agent executable."
                    },
                    {
											"name": "Agent log",
                      "regex": "^agent(_(.*))?\\.log$",
                      "flavorTextTemplate": "{{ AgentName }} MTConnect agent log file."
                    }
                  ]
                },
                {
                  "regex": "^[Dd]evices?$",
                  "flavorTextTemplate": "Organizer folder {{ AgentName }} MTConnect agent device definitions.",
                  "paths": [
                    {
											"name": "Agent device configuration",
                      "regex": "^.*+\\.xml$",
                      "flavorTextTemplate": "{{ AgentName }} MTConnect agent device definition."
                    },
                    {
											"name": "Backup Agent device configuration",
                      "regex": "^.*+\\.xml\\.(?<Timestamp>.*+Z)$",
                      "flavorTextTemplate": "{{ AgentName }} MTConnect agent device definition backup."
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
